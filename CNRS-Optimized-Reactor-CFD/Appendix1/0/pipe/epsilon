FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/pipe";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.01;

boundaryField
{
    leftLet	//inlet
    {
        type            calculated;
        value           uniform 0.01;
    }
    rightLet	//outlet
    {
        type            calculated;
        value           uniform 0.01;
    }
    frontAndBack
    {
        type            empty;
    }
    pipe_to_bottomSolid	//intrfaces
    {
        type            compressible::epsilonWallFunction;
        value           uniform 0.01;
    }
    pipe_to_topSolid	//interfaces
    {
        type            compressible::epsilonWallFunction;
        value           uniform 0.01;
    }
}


// ************************************************************************* //

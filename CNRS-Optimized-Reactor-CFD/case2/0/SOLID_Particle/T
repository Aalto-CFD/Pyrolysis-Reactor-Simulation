		kappaMethod 	fluidThermo;
		value 		        $internalField;		    
	    }	
	    
	wall_leftparticle   
	    {

		type 		       externalWallHeatFluxTemperature;
		mode 		       coefficient;
		Ta 		               constant 834.3;
		h 		               uniform 1e-06;
		emissivity 	        0.99;
		kappaMethod 	fluidThermo;
		value 		        $internalField;
	    }
	    


FoamFile
{
    format      binary;
    class       volVectorField;
    location    "0/fluid_cavity";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
Uinlet          (0 0 0.000001);

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
//---------------------------------------------------------------------------------------
	fluid_cavity_to_isolant		// interface
	    {
		type            fixedValue;
		value           uniform (0 0 0);
	    }
//---------------------------------------------------------------------------------------	    
	fluid_cavity_to_tube		// interface
	    {
		type            fixedValue;
		value           uniform (0 0 0);
	    }
//---------------------------------------------------------------------------------------	    
	flux_in			// wall
	    {
/*	    
		type            fixedValue;
		value           uniform (0 0 0);
*/
    		type            slip;  //noSlip; //if you want the flow to adjust freely
	    }
//---------------------------------------------------------------------------------------
	wall-fluid_cavity	// wall
	    {
		type            fixedValue;
		value           uniform (0 0 0);
	    }
//---------------------------------------------------------------------------------------
	 p_out			// outlet 	for CNRS case**
	    {    
//                type            inletOutlet;
//                value           $internalField;  //uniform (0 0 0);
//                inletValue      $internalField;  //uniform (0 0 0);
        type            pressureInletOutletVelocity;
        value           $internalField;                
                
	    }
//---------------------------------------------------------------------------------------	    
	 v_in			// inlet 	for CNRS case**
	    {
		type            fixedValue;
		value           uniform $Uinlet;
	    }

}


FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/fluid_cavity";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.01;

boundaryField
{
//---------------------------------------------------------------------------------------
	fluid_cavity_to_isolant		// interface
	    {
		type            compressible::epsilonWallFunction;
		value           uniform 0.01;
	    }
//---------------------------------------------------------------------------------------	    
	fluid_cavity_to_tube		// interface
	    {
		type            compressible::epsilonWallFunction;
		value           uniform 0.01;
	    }
//---------------------------------------------------------------------------------------	    
	flux_in			// patch
	    {
		type            calculated;
		value           uniform 0.01;
	    }
//---------------------------------------------------------------------------------------
	wall-fluid_cavity	// wall
	    {
		type            compressible::epsilonWallFunction;
		value           uniform 0.01;
	    }
//---------------------------------------------------------------------------------------
	 p_out			// outlet 	for CNRS case**
	    {        
		type            calculated;
		value           uniform 0.01;
	    }
//---------------------------------------------------------------------------------------	    
	 v_in			// inlet 	for CNRS case**
	    {    
		type            calculated;
		value           uniform 0.01;	
	    }
}


FoamFile
{
    format      binary;
    class       volScalarField;
    location    "0/fluid_cavity";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
pgInitial	1e5;

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pgInitial;

boundaryField
{
//---------------------------------------------------------------------------------------
	fluid_cavity_to_isolant		// interface
	    {
		type            fixedFluxPressure;
		value           $internalField;	 //uniform $pgInitial;
	    }
//---------------------------------------------------------------------------------------	    
	fluid_cavity_to_tube		// interface
	    {
		type            fixedFluxPressure;
		value           $internalField; //uniform $pgInitial;
	    }
//---------------------------------------------------------------------------------------	    
	flux_in			// patch
	    {
//    		type            zeroGradient;  //if you want the flow to adjust freely	
		type            fixedFluxPressure;
		value           $internalField;	
	    }
//---------------------------------------------------------------------------------------
	wall-fluid_cavity	// wall
	    {
		type            fixedFluxPressure;
		value           $internalField; //uniform $pgInitial;
	    }
//---------------------------------------------------------------------------------------
	 p_out			// outlet 	for CNRS case**
	    { 	    
		type            fixedValue;
		value           $internalField; //uniform 0;
	    }
//---------------------------------------------------------------------------------------	    
	 v_in			// inlet 	for CNRS case**
	    {
		type            fixedFluxPressure;
        	value           $internalField;    	
	    }
}
// ************************************************************************* //

cuttingPlane
{
    type            surfaces;
    libs            (sampling);
    writeControl    writeTime;
    surfaceFormat   vtk;
    fields          (U T p wallHeatFlux);
    interpolationScheme cellPoint; 

    surfaces
    {
        yNormal
        {
            type        cuttingPlane;
            point       (0 -0.000113 0.144);
            normal      (0 1 0);
            interpolate true;
        }
        
        zNormal
        {
            type        cuttingPlane;
            point       (0 -0.000113 0.144);
            normal      (0 0 1);
            interpolate true;
        }

    }
}
